@model Realtor.Models.Property

@{
    ViewData["Title"] = "Преглед";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Преглед</h1>
<h4>Имот @Model.propertyId | @Html.DisplayFor(model => model.transaction) </h4>
<hr />

<div class="c-wrapper">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @{
                if (Model.image.Any())
                {
                    var first = true;
                    int i = 0;
                    foreach (var image in Model.image)
                    {
                        if (first)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="i"></li>
                        }
                        i++;
                        first = false;
                    }
                }
            }
        </ol>
        <div class="carousel-inner">
            @{
                if (Model.image.Any())
                {
                    var first = true;
                    int i = 1;
                    foreach (var image in Model.image)
                    {
                        if (first)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/images/@image.name" alt="Slide @i">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/images/@image.name" alt="Slide @i">
                            </div>
                        }
                        i++;
                        first = false;
                    }
                }
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div>
    <div class="row propertyDetails">
        <div class="col-lg-4">
            <div class="row">
                <h6 class="col-sm-4">
                    @Html.DisplayNameFor(model => model.city)
                </h6>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.city.name)
                </div>
            </div>
            <div class="row">
                <h6 class="col-sm-4">
                    @Html.DisplayNameFor(model => model.propertyType)
                </h6>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.propertyType)
                </div>
            </div>
            <div class="row">
                <h6 class="col-sm-4">
                    @Html.DisplayNameFor(model => model.phoneNumber)
                </h6>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.phoneNumber)
                </div>
            </div>
            <div class="row">
                <h6 class="col-sm-4">
                    @Html.DisplayNameFor(model => model.userID)
                </h6>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.userID)
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
        <div class="col-lg-6">
            <div class="row h-20">
                <h6 class="col-sm-3">
                    @Html.DisplayNameFor(model => model.header)
                </h6>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.header)
                </div>
            </div>
            <div class="row h-70">
                <h6 class="col-sm-3">
                    @Html.DisplayNameFor(model => model.description)
                </h6>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.description)
                </div>
            </div>
            <div class="row h-10">
                <h6 class="col-sm-3">
                    @Html.DisplayNameFor(model => model.price)
                </h6>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.price)
                </div>
            </div>
        </div>
    </div>
    </div>

<div>
    <a asp-action="Index">Обратно към обявите</a>
</div>
