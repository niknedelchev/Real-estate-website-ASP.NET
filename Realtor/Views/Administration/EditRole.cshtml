@model EditRoleModel

@{ 
    ViewBag.Title = "Промяна на роля";
}

<h1> Промяна на роля</h1>

<form method="post" class="mt-3">

    <div class="card">
        <div class="card-header">
            <h3>Потребители с тази роля</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Няма към момента</h5>
            }

            <div class="form-group row">
                <a asp-action="AddOrRemoveUserRoles" asp-controller="Administration" asp-route-roleId="@Model.Id" class="btn btn-primary col-2">Промени</a>
            </div>
        </div>
        
    </div>
    

    <br />
    <br />
    <br />

    <div class="form-group row" style="display:none;">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label">Роля</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Актуализирай</button>
            <a asp-action="ListRoles" class="btn btn-primary">Обратно</a>
        </div>
    </div>

</form>